<h2 class="text-center">新增文章</h2>

<div class="col-md-4 col-md-offset-4">
  <%= simple_form_for [@group,@post] do |f| %>

    <div class="form-group">
      <%= f.input :heading, input_html: { class: "form-control"} %>
      <br />
      <%= f.input :content, input_html: { class: "form-control"} %>
    </div>

    <div class="form-group">
      <%= f.label :status %>

      <div class="btn-group" data-toggle="buttons">
        <% Post::STATUS.each do |status| %>
          <label class="btn btn-default <%= (status == f.object.status)? 'active' : '' %>">
            <%= f.radio_button :status, status %>
            <%= t(status, :scope => "post.status") %>
          </label>
        <% end %>
      </div>


    </div>
    <div class="form-actions">
      <%= f.submit "Submit", disable_with: "Submiting...", class: "btn btn-primary"%>
    </div>

  <% end %>

</div>
