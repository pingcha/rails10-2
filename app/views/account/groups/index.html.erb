<div class="col-md-12">

  <h2 class="text-center"> <%= t("account.group_relationships") %> </h2>

  <table class="table">
    <thead>
      <tr>
        <th>
          Title
        </th>
        <th>
          description
        </th>
        <th>
          Post Count
        </th>
        <th>
          Last Update
        </th>
      </tr>
    </thead>

    <tbody>
      <% @groups.each do |group| %>
      <tr>
        <td>
          <%= link_to(group.title, group_path(group)) %>
        </td>
        <td>
          <%= render_group_description(group) %>
        </td>
        <td>
          <%= group.posts.count %>
        </td>
        <td>
          <%= group.updated_at %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
